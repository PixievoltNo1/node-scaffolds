{
  "name": "{{{packageName}}}",
  "version": "{{{lowerCase packageVersion}}}",
  "description": "",
{{#if packageAuthor}}
  "author": {
    "name": "{{{packageAuthor}}}",
    "url": "https://github.com/{{{packageAuthor}}}/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}.git"{{#if isLernaProject}},
    "directory": "{{{packageLocation}}}"
{{/if}}
  },
{{#if isLernaProject}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}/tree/master/{{{packageLocation}}}#readme",
{{else}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}#readme",
{{/if}}
{{/if}}
  "keywords": [],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
{{#if isLernaProject}}
    "build": "cross-env NODE_ENV=production rollup -c ../../rollup.config.js",
{{else}}
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
{{/if}}
    "prebuild": "rimraf lib/",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build"{{#if isLernaProject}},
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir ."{{/if}}
  }{{#unless isLernaProject}},
  "devDependencies": {
    "@guanghechen/rollup-config": "^{{{toolPackageVersion}}}",
    "rollup": "2.39.1"
  }{{/unless}}
}
