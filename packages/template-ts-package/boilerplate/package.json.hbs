{
  "name": "{{{packageName}}}",
  "version": "{{{lowerCase packageVersion}}}",
  "description": "{{{packageDescription}}}",
{{#if packageAuthor}}
  "author": {
    "name": "{{{packageAuthor}}}",
    "url": "https://github.com/{{{packageAuthor}}}/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{packageAuthor}}}/{{{repositoryName}}}.git"{{#if isMonorepo}},
    "directory": "{{{packageLocation}}}"
{{/if}}
{{/if}}
  },
  "homepage": "{{{repositoryHomepage}}}",
  "keywords": [],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "prebuild": "rimraf lib/",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build"{{#if isMonorepo}},
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir ."{{/if}}
  },
  "devDependencies": {
    "@guanghechen/rollup-config": "^{{{toolPackageVersion}}}",
    "rollup": "2.40.0"
  }
}
