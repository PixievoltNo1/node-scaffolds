{
  "name": "private-repository-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "encrypt": "ghc-git-cipher encrypt .",
    "decrypt": "ghc-git-cipher decrypt ."
  },
  "devDependencies": {
    "@guanghechen/tool-git-cipher": "^{{{lowerCase templateVersion}}}"
  },
  "@guanghechen/tool-git-cipher": {
    "__globalOptions__": {
      "catalogFilepath": "{{{catalogFilepath}}}",
      "cryptRootDir": "{{{cryptRootDir}}}",
      "encoding": "{{{encoding}}}",
      "encryptedFilesDir": "{{{encryptedFilesDir}}}",
      "encryptedFilePathSalt": "{{{encryptedFilePathSalt}}}",
      "keepPlainPatterns": [
        "package.json",
        "yarn.lock",
        "${{{secretFilepath}}}"
      ],
      "logLevel": "{{{logLevel}}}",
      "minPasswordLength": {{{minPasswordLength}}},
      "partCodePrefix": "{{{partCodePrefix}}}",
      "pbkdf2Options": {
        "salt": "{{{secretSalt}}}",
        "digest": "sha256",
        "iterations": 100000,
        "keylen": 32
      },
      "plainRootDir": "{{{plainRootDir}}}",
      "secretFilepath": "{{{secretFilepath}}}",
      "showAsterisk": {{{showAsterisk}}}
    },
    "encrypt": {
      "updateBeforeEncrypt": true
    },
    "decrypt": {
      "outDir": "{{{plainRootDir}}}-bak"
    }
  }
}
