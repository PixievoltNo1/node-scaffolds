{
  "name": "private-repository-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "encrypt": "node ./node_modules/.bin/ghc-git-cipher encrypt .",
    "decrypt": "node ./node_modules/.bin/ghc-git-cipher decrypt ."
  },
  "devDependencies": {
    "@guanghechen/tool-git-cipher": "{{{lowerCase templateVersion}}}"
  },
  "@guanghechen/tool-git-cipher": {
    "__globalOptions__": {
      "logLevel": "{{{logLevel}}}",
      "encoding": "{{{encoding}}}",
      "plainRootDir": "{{{plainRootDir}}}",
      "cryptRootDir": "{{{cryptRootDir}}}",
      "secretFilepath": "{{{secretFilepath}}}",
      "keepPlainPatterns": [
        ".vscode/settings.json",
        ".vscode/launch.json",
        ".editorconfig",
        "{{{secretFilepath}}}",
        ".gitignore",
        ".npmrc",
        ".nvmrc",
        ".yarnrc",
        "package.json",
        "yarn.lock"
      ],
      "minPasswordLength": {{{minPasswordLength}}},
      "showAsterisk": {{{showAsterisk}}}
    },
    "encrypt": {
      "updateBeforeEncrypt": true
    },
    "decrypt": {
      "outDir": "{{{bakPlainRootDir}}}"
    }
  }
}
