{
  "name": "@guanghechen/rollup-config",
  "version": "5.0.0",
  "description": "Rollup configs for bundle typescript project",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/node-scaffolds/tree/@guanghechen/rollup-config@5.0.0",
    "directory": "packages/rollup-config"
  },
  "homepage": "https://github.com/guanghechen/node-scaffolds/tree/@guanghechen/rollup-config@5.0.0/packages/rollup-config#readme",
  "keywords": [
    "rollup",
    "typescript"
  ],
  "type": "module",
  "module": "./lib/esm/index.mjs",
  "exports": {
    "import": "./lib/esm/index.mjs"
  },
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf lib/ && cross-env NODE_ENV=production node --experimental-specifier-resolution=node --loader ts-node/esm -r tsconfig-paths/register script/build.ts",
    "prepublishOnly": "yarn build",
    "test": "cross-env TS_NODE_FILES=true NODE_OPTIONS=--experimental-vm-modules jest --config ../../jest.config.mjs --rootDir ."
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "24.1.0",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.2",
    "@rollup/plugin-typescript": "11.1.0",
    "import-meta-resolve": "^3.0.0",
    "rollup-plugin-dts": "^5.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.5",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "rollup": "^3.0.0",
    "typescript": ">=3.7.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 77,
        "functions": 100,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
