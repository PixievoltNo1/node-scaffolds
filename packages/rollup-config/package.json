{
  "name": "@guanghechen/rollup-config",
  "version": "2.1.4",
  "description": "Rollup configs for bundle typescript project",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/node-scaffolds/tree/release-3.x.x",
    "directory": "packages/rollup-config"
  },
  "homepage": "https://github.com/guanghechen/node-scaffolds/tree/release-3.x.x/packages/rollup-config#readme",
  "keywords": [
    "rollup",
    "typescript"
  ],
  "type": "module",
  "exports": "./lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 16.0.0"
  },
  "files": [
    "lib/",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node --loader ts-node/esm -r tsconfig-paths/register script/build.ts",
    "postbuild": "rimraf lib/types_tmp",
    "prebuild": "rimraf lib/",
    "prepublishOnly": "cross-env ROLLUP_SHOULD_SOURCEMAP=false yarn build",
    "test": "cross-env TS_NODE_FILES=true NODE_OPTIONS=--experimental-vm-modules jest --config ../../jest.config.js --rootDir ."
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "10.0.1",
    "import-meta-resolve": "^2.2.0",
    "rollup-plugin-dts": "^5.1.0"
  },
  "devDependencies": {
    "rollup": "3.9.0",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "rollup": "^3.0.0"
  }
}
