{
  "name": "@guanghechen/node-scaffolds",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/node-scaffolds/tree/release-3.x.x"
  },
  "homepage": "https://github.com/guanghechen/node-scaffolds/tree/release-3.x.x/#readme",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn prebuild && yarn test:coverage && lerna publish",
    ":upgrade": "yarn upgrade-interactive --latest && run-s clean format build test",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lint:fix": "eslint . --fix",
    "prebuild": "lerna exec 'yarn build' --scope='@guanghechen/rollup-config'",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:**",
    "postinstall:main": "is-ci || yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna exec 'echo && pwd && yarn test' --concurrency 1",
    "test:coverage": "lerna exec 'echo && pwd && yarn test --coverage' --concurrency 1",
    "test:update": "lerna exec 'echo && pwd && yarn test -u' --concurrency 1",
    "update:changelog": "gitmoji-changelog update",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "devDependencies": {
    "@babel/core": "7.20.7",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/command-exists": "^1.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "29.2.5",
    "@types/node": "^16.11.59",
    "@types/react": "^17.0.47",
    "clsx": "^1.2.1",
    "commander": "^9.4.0",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.7",
    "eslint-plugin-prettier": "4.2.1",
    "fs-extra": "^11.1.0",
    "gitmoji-changelog": "2.3.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "jest": "^29.3.1",
    "lerna": "6.3.0",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.1",
    "react": "^17.0.2",
    "rimraf": "3.0.2",
    "rollup": "3.9.0",
    "stylus": "0.59.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "4.9.4",
    "yarn-deduplicate": "6.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  }
}
