{
  "name": "@guanghechen/scaffolds",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/node-scaffolds.git"
  },
  "homepage": "https://github.com/guanghechen/node-scaffolds/#readme",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lint:fix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lint:fix": "eslint . --fix",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --parallel",
    "test:coverage": "lerna run test:coverage --parallel",
    "update:changelog": "gitmoji-changelog update",
    "update:test": "lerna run answer --parallel",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.1",
    "cross-env": "7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "gitmoji-changelog": "2.2.0",
    "husky": "5.1.1",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.2",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.2.2",
    "yarn-deduplicate": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
