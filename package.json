{
  "name": "@guanghechen/node-scaffolds",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/node-scaffolds/tree/release-5.x.x"
  },
  "homepage": "https://github.com/guanghechen/node-scaffolds/tree/release-5.x.x/#readme",
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    ":publish": "yarn test:coverage && yarn prebuild && node --experimental-vm-modules node_modules/.bin/lerna publish",
    ":upgrade": "yarn upgrade-interactive && run-s clean format build test",
    "build": "yarn prebuild && lerna run build --concurrency 1",
    "depcheck": "lerna exec --no-bail --stream -- depcheck",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:lintfix format:prettier",
    "format:prettier": "prettier . --write",
    "format:lintfix": "eslint . --fix",
    "prebuild": "lerna run build --scope='@guanghechen/rollup-config'",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-s postinstall:dev",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --concurrency 1",
    "test:coverage": "lerna run --concurrency 1 test -- --coverage",
    "test:update": "lerna run --concurrency 1 test -- -u",
    "update:changelog": "gitmoji-changelog update",
    "version": "yarn && git stage yarn.lock"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "resolutions": {
    "node-plop/inquirer": "^9.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.21.5",
    "@rollup/plugin-replace": "^5.0.2",
    "@types/command-exists": "^1.2.0",
    "@types/jest": "29.5.1",
    "@types/node": "^16.18.25",
    "ci-info": "^3.8.0",
    "clsx": "^1.2.1",
    "commander": "^10.0.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.3",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "gitmoji-changelog": "2.3.0",
    "husky": "8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.5.0",
    "lerna": "6.6.1",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "prettier": "2.8.8",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.1",
    "stylus": "0.59.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,eslintrc}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.3.1"
}
