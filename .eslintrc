{
  "root": true,
  "extends": ["@guanghechen", "plugin:jest/recommended", "prettier"],
  "plugins": ["import", "jest", "prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "import/no-internal-modules": [
      "error",
      {
        "allow": ["util"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*tsx"],
      "extends": ["@guanghechen/ts", "plugin:jest/recommended"]
    }
  ]
}
